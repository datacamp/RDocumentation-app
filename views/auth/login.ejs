<section class="authentication">
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3">
        <h3 class="authentication--title">Sign in</h3>
        <form class="authentication--form" action="/login" method="post">
          <fieldset>
            <label for="username">Username/email</label>
            <input id="username" name="username" type="text">
          </fieldset>
          <fieldset>
            <label for="password">Password</label>
            <input id="password" name="password" type="password">
          </fieldset>
          <fieldset>
            <button type="submit" class="btn btn-primary">Login</button>
          </fieldset>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-lg-6 col-lg-offset-3">
        <p> Or <a class = "js-external" href="/register">create an account</a> </p>
      </div>
    </div>
  </div>
</section>

