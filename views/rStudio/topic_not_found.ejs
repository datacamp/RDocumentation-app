<% var topics = data; %>
<section class="package">
  <div class="container">
    <header>
      <h4>There where no functions found matching your search term</h4>
      <%if(topics.length>0){ %>
        Perhaps you meant one of these:
        <section class="table-list">
        <input id="packagefilter" type="text" placeholder="Filter packages">
        <table>
          <thead>
            <tr>
              <td>Name</td>
              <td>Package</td>
              <td>Description</td>
            </tr>
          </thead>
          <tbody id="filterableItems">
            <% for(var i = 0; i < topics.length; ++i) { %>
              <%var topic = topics[i];%>
              <tr>
                <td><a href="<%= '/packages/' + topic.package_name +'/versions/'+topic.package_version+'/topics/'+topic.function_name %>"><%= topic.function_name %> (alias:<%=topic.function_alias%>)</a></td>
                <td><%- topic.package_name %></td>
                <td><%- topic.function_description%></td>
              </tr>
            <% } %>
            <tr class="no-results"><td colspan="3">No Results!</td></tr>
          </tbody>
        </table>
      </section>
      <%}%>
    </header>
  </div>
</section>
