<% var user = data; %>
<% var user_examples = user.examples; %>
<section class="user">
  <div class="container">
    <header>
      <h1><%- user.username %></h1>
    </header>

    <section class="user--reviews">
      <h3>My Examples</h3>
      <div class="user--reviews-content">
        <% if(user_examples.length === 0) { %>
          <div class="review--placeholder">Looks like there are no examples yet.</div>
        <% } %>
        <% for(var i=0; i < user_examples.length; i++) { %>
          <% var exampleUser = null; %>
          <% var exampleTarget = (user_examples[i].topic); %>
          <%- include ../shared/_example.ejs %>
        <% } %>
      </div>
    </section>

  </div>
</section>
