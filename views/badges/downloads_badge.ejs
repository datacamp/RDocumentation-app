<% var downloadstats = data; %>
<svg xmlns="http://www.w3.org/2000/svg" width="<%=120+downloadstats.length%>" height="20">
  <linearGradient id="b" x2="0" y2="100%">
    <stop offset="0" stop-color="#bbb" stop-opacity=".1"/>
    <stop offset="1" stop-opacity=".1"/>
  </linearGradient>
  <mask id="a">
    <rect width="<%=120+downloadstats.length%>" height="20" rx="3" fill="#fff"/>
  </mask>
  <g mask="url(#a)"><path fill="#555" d="M0 0h120v20H0z"/>
    <path fill="#33aacc" d="M118 0h<%=downloadstats.length%>v20H120z"/>
    <path fill="url(#b)" d="M0 0h<%=120+downloadstats.length%>v20H0z"/>
  </g>
  <g fill="#fff" text-anchor="middle"
     font-family="DejaVu Sans,Verdana,Geneva,sans-serif" font-size="11">
    <text x="55" y="15" fill="#010101" fill-opacity=".3">
      <%=downloadstats.statsName%>
    </text>
    <text x="55" y="14">
     <%=downloadstats.statsName%>
    </text>
    <text x="<%=120+downloadstats.length/2%>" y="15" fill="#010101" fill-opacity=".3">
      <%=downloadstats.downloads%>/<%=downloadstats.period%>
    </text>
    <text x="<%=120+downloadstats.length/2%>" y="14">
      <%=downloadstats.downloads%>/<%=downloadstats.period%>
    </text>
  </g>
</svg>